            <div class="signup">
                <form>
                    <label for="chk" aria-hidden="true">Login</label>
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "User Name", @id = "txtUserName", @autocomplete = "off" })
                    @Html.ValidationMessageFor(model => model.UserName, null, new { @class = "text-danger" })

                    @Html.TextBoxFor(model => model.Contrasenia, new { @class = "form-control", @placeholder = "Password", @autocomplete = "off", @type="password" })
                    @Html.ValidationMessageFor(model => model.Contrasenia, null, new { @class = "text-danger" })
